/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a role-based access control model with user-owned data and superuser overrides.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the user themselves.
 * - /users/{userId}/sales/{saleId}: Stores sales records for a specific user, accessible only to the user themselves.
 * - /products/{productId}: Stores product information. Public read access, but only superusers can create, update, or delete products.
 * - /sales/{saleId}: Stores all sales data. Public read access, but only superusers can create, update, or delete sales records.
 * - /audit_logs/{auditLogId}: Stores audit logs. Only superusers can read or write audit logs.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - Superusers have elevated privileges to manage products, sales, and audit logs.
 * - Read access to products and sales is public to allow for open data consumption.
 *
 * Denormalization for Authorization:
 *  - User roles are denormalized directly onto the /users/{userId} document to avoid costly `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document, based on the provided userId.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is a superuser.
     */
    function isSuperuser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superuser';
    }

    /**
     * @description Checks if the user is an existing owner of the document.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
    
    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User 'user_abc' can create their own profile (id matches auth UID).
     * @allow (get) User 'user_abc' can read their own profile.
     * @allow (update) User 'user_abc' can update their own profile.
     * @allow (delete) User 'user_abc' can delete their own profile.
     * @deny (create) User 'user_abc' cannot create a profile with a different ID.
     * @deny (get) User 'user_xyz' cannot read 'user_abc' profile.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is disallowed.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Rules for sales records within a user profile.
     * @path /users/{userId}/sales/{saleId}
     * @allow (create) User 'user_abc' can create a sale record under their profile.
     * @allow (get) User 'user_abc' can read a sale record under their profile.
     * @allow (update) User 'user_abc' can update a sale record under their profile.
     * @allow (delete) User 'user_abc' can delete a sale record under their profile.
     * @deny (create) User 'user_xyz' cannot create a sale record under 'user_abc' profile.
     * @deny (get) User 'user_xyz' cannot read a sale record under 'user_abc' profile.
     * @principle Enforces document ownership for sales records within user profiles.
     */
    match /users/{userId}/sales/{saleId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for product information.
     * @path /products/{productId}
     * @allow (get) Any user can read product information.
     * @allow (list) Any user can list product information.
     * @allow (create) Only superusers can create products.
     * @allow (update) Only superusers can update products.
     * @allow (delete) Only superusers can delete products.
     * @deny (create) Regular users cannot create products.
     * @deny (update) Regular users cannot update products.
     * @principle Public read access with superuser-only writes.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSuperuser();
      allow update: if isSuperuser();
      allow delete: if isSuperuser();
    }

    /**
     * @description Rules for sales data.
     * @path /sales/{saleId}
     * @allow (get) Any user can read sales data.
     * @allow (list) Any user can list sales data.
     * @allow (create) Only superusers can create sales data.
     * @allow (update) Only superusers can update sales data.
     * @allow (delete) Only superusers can delete sales data.
     * @deny (create) Regular users cannot create sales data.
     * @deny (update) Regular users cannot update sales data.
     * @principle Public read access with superuser-only writes.
     */
    match /sales/{saleId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSuperuser();
      allow update: if isSuperuser();
      allow delete: if isSuperuser();
    }

    /**
     * @description Rules for audit logs.
     * @path /audit_logs/{auditLogId}
     * @allow (get) Only superusers can read audit logs.
     * @allow (list) Only superusers can list audit logs.
     * @allow (create) Only superusers can create audit logs.
     * @allow (update) Only superusers can update audit logs.
     * @allow (delete) Only superusers can delete audit logs.
     * @deny (create) Regular users cannot create audit logs.
     * @deny (update) Regular users cannot update audit logs.
     * @principle Superuser-only access to audit logs.
     */
    match /audit_logs/{auditLogId} {
      allow get: if isSuperuser();
      allow list: if isSuperuser();
      allow create: if isSuperuser();
      allow update: if isSuperuser();
      allow delete: if isSuperuser();
    }
  }
}