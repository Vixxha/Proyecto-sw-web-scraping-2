/**
 * @fileoverview Firestore Security Rules for ComponentCompares application.
 *
 * Core Philosophy:
 * This ruleset prioritizes user data protection and enforces strict access controls based on user roles and ownership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information, accessible only by the user themselves.
 * - /users/{userId}/sales/{saleId}: Stores sales records specific to a user, accessible only by that user.
 * - /products/{productId}: Stores product information, publicly readable but writable by authorized users only (TODO).
 * - /sales/{saleId}: Stores all sales records, accessible to superusers (TODO).
 * - /audit_logs/{auditLogId}: Stores audit logs, accessible to superusers (TODO).
 *
 * Key Security Decisions:
 * - Users can only access their own data under /users/{userId} and its subcollections.
 * - Public read access to products.
 * - Superuser access is currently not implemented but has TODO placeholders for future implementation.
 * - Schema validation is relaxed in this prototyping phase, focusing on authorization.
 *
 * Denormalization for Authorization:
 * - The rules assume that the `userId` field within a Sale document in `/users/{userId}/sales/{saleId}` matches the `userId` in the path. This is validated on creation.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) Signed-in user can create their own profile if the userId matches their auth.uid.
     * @allow (get, update, delete) Signed-in user can access their own profile if the userId matches their auth.uid.
     * @deny (create) If the userId does not match the authenticated user's ID.
     * @deny (get, update, delete) If the userId does not match the authenticated user's ID.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to sales records for a specific user.
     * @path /users/{userId}/sales/{saleId}
     * @allow (create) Signed-in user can create a sale record under their profile if the userId matches their auth.uid.
     * @allow (get, list, update, delete) Signed-in user can access their own sales records if the userId matches their auth.uid.
     * @deny (create) If the userId does not match the authenticated user's ID.
     * @deny (get, list, update, delete) If the userId does not match the authenticated user's ID.
     * @principle Enforces document ownership for sales records.
     */
    match /users/{userId}/sales/{saleId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to product information. Products are publicly readable, but writes are restricted (TODO: implement restrictions).
     * @path /products/{productId}
     * @allow (get, list) Publicly readable.
     * @deny (create, update, delete) No write access granted in this prototype.
     * @principle Allows public read access to product information.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add role-based or owner-based write restrictions later
    }

    /**
     * @description Controls access to all sales records. Access restricted to superusers (TODO: implement superuser check).
     * @path /sales/{saleId}
     * @deny (get, list, create, update, delete) No access granted in this prototype.
     * @principle Restricts access to sales records.
     */
    match /sales/{saleId} {
       allow get, list, create, update, delete: if false; // TODO: Add superuser role check later
    }

    /**
     * @description Controls access to audit logs. Access restricted to superusers (TODO: implement superuser check).
     * @path /audit_logs/{auditLogId}
     * @deny (get, list, create, update, delete) No access granted in this prototype.
     * @principle Restricts access to audit logs.
     */
    match /audit_logs/{auditLogId} {
      allow get, list, create, update, delete: if false; // TODO: Add superuser role check later
    }
  }
}