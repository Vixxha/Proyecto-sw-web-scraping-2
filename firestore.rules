/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles
 * and allows only superusers to manage audit logs.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. The userId must match the Firebase Auth UID.
 * - /audit_logs/{auditLogId}: Stores audit logs, only accessible to superusers.
 *
 * Key Security Decisions:
 * - User profiles are private and only accessible to the owning user.
 * - Audit logs are only manageable by superusers.
 * - Listing of users is not allowed to prevent information disclosure.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create their profile at /users/user_abc.
     * @allow (get, update, delete) - User with UID 'user_abc' can access their profile at /users/user_abc.
     * @deny (create) - User with UID 'user_abc' cannot create a profile at /users/user_xyz.
     * @deny (get, update, delete) - User with UID 'user_abc' cannot access the profile at /users/user_xyz.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      // Helper function to check if the authenticated user is the owner of the document.
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Helper function to check if the authenticated user is the owner of the document and it exists.
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to audit log documents.
     * @path /audit_logs/{auditLogId}
     * @allow (create, get, list, update, delete) - Only a superuser can manage audit logs.
     * @deny (create, get, list, update, delete) - A regular user cannot manage audit logs.
     * @principle Restricts access to audit logs to superusers.
     */
    match /audit_logs/{auditLogId} {
       // Helper function to check if the authenticated user is a superuser.
      function isSuperuser() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superuser';
      }
      allow get, list: if isSuperuser();
      allow create: if isSuperuser();
      allow update: if isSuperuser() && resource != null;
      allow delete: if isSuperuser() && resource != null;
    }
  }
}